<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id="slidemenu">
      <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
        <% if user_signed_in? %>
          <li class="">
            <%= link_to "Home", user_path(current_user.id), class:"home"%>
          </li>
          <li class="">
            <%= link_to "Users", user_path, class:"users"%>
          </li>
          <li class="">
            <%= link_to "Books", user_path, class:"books"%>
          </li>
          <li class="">
            <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"logout"%>
          </li>
        <% else %>
          <li class="">
            <%= link_to "Home", new_home_path, class:"home" %>
          </li>
          <li class="">
            <%= link_to "About", homes_path, class:"about" %>
          </li>
          <li class="">
            <%= link_to "Signup", new_user_registration_path, class:"sign_up" %>
          </li>
          <li class="">
            <%= link_to "Login", new_user_session_path, class:"sign_in" %>
          </li>
        <% end %>
      </ul>  
    <%= yield %>
  </body>
</html>
